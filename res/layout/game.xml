<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:background="#ffaa00"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
 
      
    <LinearLayout 
        android:orientation="horizontal"
        android:id="@+id/menuPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffaa00">
        
       <LinearLayout 
        android:orientation="vertical"
        android:id="@+id/separator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffaa00">
        
       <ImageButton
            android:id="@+id/buttonSelectPattern"
            android:background="@drawable/icon_stencil"
            android:layout_width="50sp"
       		android:layout_height="50sp"/>
            
           
        <ImageButton
        android:layout_marginTop="2dp"    
        android:id="@+id/buttonPickerColor"
        android:background="@drawable/icon_color"
        android:layout_width="50sp"
        android:layout_height="50sp"
        />
        
        <ImageButton
        android:id="@+id/buttonThickness"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@drawable/icon_size"
        />
        
        <ImageButton
        android:id="@+id/buttonGallery"
        android:background="@drawable/icon_gallery"
        android:layout_width="50sp"
        android:layout_height="50sp" />
        
        <ImageButton
        android:id="@+id/buttonShare"
        android:background="@drawable/icon_share"
        android:layout_width="50sp"
        android:layout_height="50sp" />
        
        
        </LinearLayout>
        
        <classes.Graffiti 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawView"
      />
    </LinearLayout>

   <LinearLayout 
        android:orientation="vertical"
        android:id="@+id/bannerPlaceholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0e0c02">
    </LinearLayout>
      
</LinearLayout>